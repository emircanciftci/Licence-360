
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@model List<Licence360.DAL.DB.Product>
<div class="card col-12">
    <div class="card-header">
        <h5>
            Program Listesi
        </h5>
    </div>
    <div class="mr-3 ml-3">
        <table id="myTable" class="table table-striped text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Program Adı</th>
                    <th>Lisans Süresi</th>
                    <th>Açıklama</th>
                    <th>Durumu</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.ProductName</td>
                        <td>@item.LicenceTime.LicenceTimeName Ay</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <a href="#" onclick="UpdateIsActive(@item.ID)"><span class="badge badge-success">Aktif</span></a>
                            }
                            else
                            {
                                <a href="#" onclick="UpdateIsActive(@item.ID)"><span class="badge badge-danger">Pasif</span></a>
                            }
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Product/ProductDetail/@item.ID"><i class="fa fa-search"></i> Detay</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>

<script>
    function UpdateIsActive(ID) {
        $.get("/Product/UpdateIsActive/" + ID, function (result) {
            if (result) {
                toastr.success("Durum Aktif olarak değiştirildi", "İşlem Başarılı");
                setInterval(function () {
                    window.location.reload()
                }, 2000)
            }
            else {
                toastr.success("Durum Pasif olarak değiştirildi", "İşlem Başarılı");
                setInterval(function () {
                    window.location.reload()
                }, 2000)
            }
        })
    }
</script>

