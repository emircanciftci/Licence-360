
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@model Licence360.UI.Models.HomeVM
<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.CustomerList.Where(x => x.IsActive == true).Count()</h3>
                <p>Aktif Müşteriler</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="/Home/ActiveCustomerDetail" class="small-box-footer">Detaylar <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.CustomerList.Where(x => x.IsActive != true).Count()</h3>
                <p>Pasif Müşteriler</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/Home/PassiveCustomerDetail" class="small-box-footer">Detaylar <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning text-white">
            <div class="inner">
                <h3>@Model.ProductList.Count()</h3>
                <p>Programlar</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="/Product/Index" class="small-box-footer text-white">Detaylar <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.CustomerLicenceList.Where(x => x.EndDate >= DateTime.Today && x.EndDate <= DateTime.Today.AddMonths(1)).Count()</h3>
                <p>Lisansı Bitecek Müşteriler(1 Ay↓)</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="/Home/LicenceDetail" class="small-box-footer">Detaylar <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>